<% layout('layouts/boilerplate') %>

    <div class="container mt-5 p-5">
        <div class="row g-4">
            <% products.forEach(product => { %>
                <div class="col-md-3 d-flex align-items-stretch">
                    <div class="card bg-dark text-white h-100 shadow-sm">
                        <img src="<%= product.image %>" loading="lazy"  width="300" height="300" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= product.name %>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <%= product.description %>
                            </p>
                            <a href="#" class="btn btn-primary mt-auto mb-2">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                            <a href="#" class="btn btn-secondary mt-auto mb-2">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </a>
                            <a href="#" class="btn btn-outline-light mt-auto">
                                <i class="fas fa-heart"></i> Add to Wishlist
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>